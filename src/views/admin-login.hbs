    <script>
document.getElementById('adminLoginForm').addEventListener('submit', function(event) {
    var username = document.getElementById('username');
    var password = document.getElementById('password');
    var warningMessage = document.getElementById('warningMessage');

    // Remove any existing error classes
    username.classList.remove('input-error');
    password.classList.remove('input-error');

    if (username.value === '' || password.value === '') {
        event.preventDefault(); // Prevent form submission
        warningMessage.style.display = 'block'; // Show the warning message

        // Add error class to empty input fields
        if (username.value === '') {
            username.classList.add('input-error');
        }
        if (password.value === '') {
            password.classList.add('input-error');
        }
    } else {
        warningMessage.style.display = 'none'; // Hide the warning message if inputs are valid
    }
});
</script>

