    <!-- CRUD Section -->
    <main id="main">
      <div class="col-md-20" style="margin-bottom: 400px;">
        <section class="CRUD">
          <div class="crud-container">
            <!-- Form -->
            <div class="col-md-20">
              <form enctype="multipart/form-data" method="POST" action="/admin/agents/edit/{{agent._id}}" novalidate>
                <!-- Container for Upload Image -->
                <div class="col-md-12 d-flex justify-content-center">
                  <div
                    class="upload-image-container d-flex justify-content-center align-items-center">
                    <div class="image-container">
                      <img id="previewImage" src="data:image/jpeg;base64,{{agent.image}}" alt="Uploaded Image"
                        class="uploaded-image">
                    </div>
                  </div>
                </div>

                <!-- Picture (Image Upload Button) -->
                <div class="col-md-20">
                  <div
                    class="image-upload d-flex justify-content-center align-items-center">
                    <label for="imageUpload" class="btn btn-primary">
                      Upload Image
                      <input type="file" id="imageUpload" name="imageUpload" accept="image/*" style="display:none;">
                    </label>
                    <img id="previewImage" src="#" alt="Uploaded Image"
                      style="display:none;">
                  </div>
                </div>

                <div class="row">
                  <!-- Agent Information -->
                  <div class="col-md-6">
                    <fieldset>
                      <legend>Agent Information</legend>
                      <!-- Name -->
                      <div class="form-group">
                        <label for="agentName">Name:</label>
                        <input type="text" class="form-control" id="agentName"
                          name="agentName" value="{{agent.name}}">
                      </div>
                      <!-- Email -->
                      <div class="form-group">
                        <label for="agentEmail">Email:</label>
                        <input type="email" class="form-control" id="agentEmail"
                          name="agentEmail" value="{{agent.email}}">
                      </div>
                      <!-- Education -->
                      <div class="form-group">
                        <label for="agentEducation">Education:</label>
                        <input type="text" class="form-control"
                          id="agentEducation" name="agentEducation" value="{{agent.education}}">
                      </div>
                    </div>
                    <div class="col-md-6">
                      <fieldset>
                        <legend>Agent Socials</legend>
                        <!-- FB -->
                        <div class="form-group">
                          <label for="agentFB">Facebook link:</label>
                          <input type="text" class="form-control" id="agentFB"
                            name="agentFB" value="{{agent.fb}}">
                        </div>
                        <!-- X -->
                        <div class="form-group">
                          <label for="agentX">X link:</label>
                          <input type="text" class="form-control" id="agentX"
                            name="agentX" value="{{agent.x}}">
                        </div>
                        <!-- Instagram -->
                        <div class="form-group">
                          <label for="agentInstagram">Instagram link:</label>
                          <input type="text" class="form-control"
                            id="agentInstagram" name="agentInstagram" value="{{agent.instagram}}">
                        </div>
                        <!-- LinkedIn -->
                        <div class="form-group">
                          <label for="agentLinkedIn">LinkedIn link:</label>
                          <input type="text" class="form-control"
                            id="agentLinkedIn" name="agentLinkedIn" value="{{agent.linkedin}}">
                        </div>
                      </div>
                    </div>
                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                      <button type="submit"
                        class="btn btn-primary">Edit</button>
                    </div>
                  </form>
                </div>
              </div>
