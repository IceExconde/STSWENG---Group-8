        <main id="main">
            <!-- CRUD Section -->
            <div class="col-md-20" style="margin-bottom: 400px;">
                <section class="CRUD">
                    <div class="crud-container">
                        <!-- Form -->
                        <div class="col-md-20">
                            <form id="property-form" enctype="multipart/form-data" method="POST"
                                action="/admin/properties/add" novalidate>
                                <!-- Container for Upload Image -->
                                <div
                                    class="col-md-12 d-flex justify-content-center">
                                    <div
                                        class="upload-image-container d-flex justify-content-center align-items-center">
                                        <div class="image-container" id="image-file">
                                            <img id="previewImage" src="#"
                                                alt="Uploaded Image"
                                                class="uploaded-image">
                                        </div>
                                    </div>
                                </div>

                                <!-- Picture (Image Upload Button) -->
                                <div class="col-md-20">
                                    <div
                                        class="image-upload d-flex justify-content-center align-items-center">
                                        <label for="imageUpload"
                                            class="btn btn-primary">
                                            Upload Image
                                            <input type="file" id="imageUpload"
                                                name="imageUpload"
                                                accept="image/*"
                                                style="display:none;">
                                        </label>
                                        <img id="previewImage" src="#"
                                            alt="Uploaded Image"
                                            style="display:none;">
                                    </div>
                                </div>
                                <div class="row">
                                    <!-- Property Information (Left Side) -->
                                    <div class="col-md-6">
                                        <fieldset>
                                            <legend>Property
                                                Information</legend>
                                            <!-- Name -->
                                            <div class="form-group">
                                                <label
                                                    for="propertyName">Name:</label>
                                                <input type="text"
                                                    class="form-control"
                                                    id="propertyName"
                                                    name="propertyName">
                         
                                            </div>
                                            <!-- Archipelago -->
                                            <div class="form-group">
                                                <label
                                                    for="propertyArchipelago">Archipelago:</label>
                                                <select class="form-control"
                                                    id="propertyArchipelago"
                                                    name="propertyArchipelago">
                                                    <option
                                                        value="Luzon">Luzon</option>
                                                    <option
                                                        value="Visayas">Visayas</option>
                                                    <option
                                                        value="Mindanao">Mindanao</option>
                                                </select>

                                            </div>
                                            <!-- Address -->
                                            <div class="form-group">
                                                <label
                                                    for="propertyAddress">Address:</label>
                                                <input type="text"
                                                    class="form-control"
                                                    id="propertyAddress"
                                                    name="propertyAddress">
                                            </div>
                                            <!-- Price -->
                                            <div class="form-group">
                                                <label
                                                    for="propertyPrice">Price:</label>
                                                <input type="text"
                                                    class="form-control"
                                                    id="propertyPrice"
                                                    name="propertyPrice">
                                            </div>
                                            <!-- Status (Sold or Not Sold) -->
                                            <div class="form-group">
                                                <label
                                                    for="propertyStatus">Property
                                                    Status:</label>
                                                <select class="form-control"
                                                    id="propertyStatus"
                                                    name="propertyStatus">
                                                    <option
                                                        value="Sold">Sold</option>
                                                    <option value="For Sale">For
                                                        Sale</option>
                                                    <option
                                                        value="Rent">Rent</option>
                                                </select>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <!-- Property Details (Right Side) -->
                                    <div class="col-md-6">
                                        <fieldset>
                                            <legend>Property Details</legend>
                                            <!-- Lot Size -->
                                            <div class="form-group">
                                                <label for="lotSize">Lot
                                                    Size:</label>
                                                <input type="text"
                                                    class="form-control"
                                                    id="lotSize" name="lotSize">
                                            </div>
                                            <!-- Floor Size -->
                                            <div class="form-group">
                                                <label for="floorSize">Floor
                                                    Size:</label>
                                                <input type="text"
                                                    class="form-control"
                                                    id="floorSize"
                                                    name="floorSize">
                                            </div>
                                            <!-- Number of Floors -->
                                            <div class="form-group">
                                                <label for="numFloors">Number of
                                                    Floors:</label>
                                                <input type="text"
                                                    class="form-control"
                                                    id="numFloors"
                                                    name="numFloors">
                                            </div>
                                            <!-- Number of Rooms -->
                                            <div class="form-group">
                                                <label for="numRooms">Number of
                                                    Rooms:</label>
                                                <input type="text"
                                                    class="form-control"
                                                    id="numRooms"
                                                    name="numRooms">
                                            </div>
                                            <!-- Additional Features -->
                                            <div class="form-group">
                                                <label
                                                    for="additionalFeatures">Additional
                                                    Features:</label>
                                                <textarea id='additional-features' style="border color" class="form-control"
                                                    id="additionalFeatures"
                                                    name="additionalFeatures"
                                                    rows="4"></textarea>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                                <!-- Error Message -->
                                <div class="text-center error" id="error-message" style="display: none" role="alert"></div>
                                <!-- Submit Button -->
                                <div class="text-center mt-4">
                                    <button type="submit"
                                        class="btn btn-primary">Add</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
