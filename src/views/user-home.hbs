<body>

  <!-- ======= Header/Navbar ======= -->
  <nav class="navbar navbar-default navbar-trans navbar-expand-lg fixed-top">
    <div class="container">
      <a class="navbar-brand text-brand" href="/"><img src="/img/padua-realty-logo.png" style="width: 100px; height: 100px;"></a>
      
      <div class="justify-content-center" id="navbarDefault">
        <ul class="navbar-nav">

          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>

          <li class="nav-item">
            <a class="nav-link " href="/properties">Properties</a>
          </li>

          <li class="nav-item">
            <a class="nav-link " href="/agents">Agents</a>
          </li>

          <li class="nav-item">

            <a class="nav-link " href="/about-us">About</a>

          </li>

          <li class="nav-item">
            <a class="nav-link " href="/services">Services</a>
          </li>

          <li class="nav-item">
            <a class="nav-link " href="/contact">Contact</a>
          </li>

        </ul>
      </div>

    </div>
  </nav><!-- End Header/Navbar -->

  <!-- ======= Intro Section ======= -->
  <div class="intro intro-carousel swiper position-relative">

    <div class="swiper-wrapper">

      <div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url(/img/House-Cover-1.jpg)">
        <div class="overlay overlay-a"></div>
        <div class="intro-content display-table">
          <div class="table-cell">
            <div class="container">
              <div class="row">
                <div class="col-lg-8">
                  <div class="intro-body">
                    <p class="intro-title-top">Looking for
                      <br> a new home?
                    </p>
                    <h1 class="intro-title mb-4 ">
                      <span class="color-b">Check </span> out 
                      <br> Padua Realty
                    </h1>
                    <p class="intro-subtitle intro-price">
                      <a href="/properties"><span class="price-a">Learn More</span></a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{#each rentBanner}}
      <div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url(data:image/jpeg;base64,{{this.image}})">
        <div class="overlay overlay-a"></div>
        <div class="intro-content display-table">
          <div class="table-cell">
            <div class="container">
              <div class="row">
                <div class="col-lg-8">
                  <div class="intro-body">
                    <p class="intro-title-top">{{this.archipelago}}
                      <br> {{this.lotsize}}
                    </p>
                    <h1 class="intro-title mb-4">
                      <span class="color-b">{{this.name}} </span> 
                      <br> {{this.address}}
                    </h1>
                    <p class="intro-subtitle intro-price">
                      <a href="/properties/{{this._id}}"><span class="price-a">rent | {{this.price}}</span></a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="swiper-pagination"></div>
  </div><!-- End Intro Section -->

  <main id="main">
    
    <!-- ======= Latest Properties Section (Uses news-section template) ======= -->
    <section class="section-news section-t8 news-bg">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="title-wrap d-flex justify-content-between">
              <div class="title-box">
                <h2 class="title-a">Latest Properties</h2>
              </div>
              <div class="title-link">
                <a href="/properties">All Property
                  <span class="bi bi-chevron-right"></span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <div id="news-carousel" class="swiper">
          <div class="swiper-wrapper">
          {{#each latestProperty}}
            <div class="carousel-item-c swiper-slide">
              <div class="card-box-b card-shadow news-box">
                <div class="img-box-b">
                  <img src="data:image/jpeg;base64,{{this.image}}" alt="" class="img-b img-fluid">
                </div>
                <div class="card-overlay">
                  <div class="card-header-b">
                    <div class="card-title-b">
                      <h2 class="title-2">
                        <a href="/properties/{{this._id}}">{{this.name}}
                          <br> {{this.address}}</a>
                      </h2>
                    </div>
                  </div>
                </div>
              </div>
            </div><!-- End carousel item -->
            {{/each}}
          </div>
        </div>

        <div class="news-carousel-pagination carousel-pagination"></div>
      </div>
    </section><!-- End Latest News Section -->

    <!-- ======= Agents Section ======= -->
    <section class="section-agents section-t8 agent-bg">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="title-wrap d-flex justify-content-between">
              <div class="title-box">
                <h2 class="title-a">Agents</h2>
              </div>
              <div class="title-link">
                <a href="/agents">All Agents
                  <span class="bi bi-chevron-right"></span>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
        {{#each agents}}
          <div class="col-md-4">
            <div class="card-box-d">
              <div class="card-img-d">
                <img src="data:image/jpeg;base64,{{this.image}}" alt="" class="img-d img-fluid">
              </div>
              <div class="card-overlay card-overlay-hover">
                <div class="card-header-d">
                  <div class="card-title-d align-self-center">
                    <h3 class="title-d">
                      <a href="mailto:{{this.email}}" class="link-two">{{this.name}}
                    </h3>
                  </div>
                </div>
                <div class="card-body-d">
                  <p class="content-d color-text-a">
                  </p>
                  <div class="info-agents color-a">
                    <p>
                    </p>
                    <p>
                      <strong>Email: </strong> {{this.email}}
                    </p>
                    <p>
                      <strong>Education: </strong> {{this.education}}
                    </p>
                  </div>
                </div>
                <div class="card-footer-d">
                  <div class="socials-footer d-flex justify-content-center">
                    <ul class="list-inline">
                      <li class="list-inline-item">
                        <a href="{{this.fb}}" class="link-one">
                          <i class="bi bi-facebook" aria-hidden="true"></i>
                        </a>
                      </li>
                      <li class="list-inline-item">
                        <a href="{{this.x}}" class="link-one">
                          <i class="bi bi-twitter" aria-hidden="true"></i>
                        </a>
                      </li>
                      <li class="list-inline-item">
                        <a href="{{this.instagram}}" class="link-one">
                          <i class="bi bi-instagram" aria-hidden="true"></i>
                        </a>
                      </li>
                      <li class="list-inline-item">
                        <a href="{{this.linkedin}}" class="link-one">
                          <i class="bi bi-linkedin" aria-hidden="true"></i>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
        </div>
      </div>
    </section><!-- End Agents Section -->

    <!-- ======= Sold Properties Section ======= -->
    <section class="section-property section-t8">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="title-wrap d-flex justify-content-between">
              <div class="title-box">
                <h2 class="title-a">Sold Properties</h2>
              </div>
              <div class="title-link">
                <a href="/properties">All Property
                  <span class="bi bi-chevron-right"></span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <div id="property-carousel" class="swiper">
          <div class="swiper-wrapper">
            {{#each soldProperty}}
            <div class="carousel-item-b swiper-slide">
              <div class="card-box-a card-shadow">
                <div class="img-box-a">
                  <img src="data:image/jpeg;base64,{{this.image}}" alt="" class="img-a img-fluid">
                </div>
                <div class="card-overlay">
                  <div class="card-overlay-a-content">
                    <div class="card-header-a">
                      <h2 class="card-title-a">
                        <a href="/properties/{{this._id}}">{{this.name}}
                          <br /> {{this.address}}</a>
                      </h2>
                    </div>
                    <div class="card-body-a">
                      
                      <a href="/properties/{{this._id}}" class="link-a">Click here to view
                        <span class="bi bi-chevron-right"></span>
                      </a>
                    </div>
                    <div class="card-footer-a">
                      <ul class="card-info d-flex justify-content-around">
                        <li>
                          <h4 class="card-info-title">Lot Area</h4>
                          <span>{{this.lotsize}}
                            <sup></sup>
                          </span>
                        </li>
                        <li>
                          <h4 class="card-info-title">Floor Area</h4>
                          <span>{{this.floorsize}}</span>
                        </li>
                        <li>
                          <h4 class="card-info-title">Floors</h4>
                          <span>{{this.floornum}}</span>
                        </li>
                        <li>
                          <h4 class="card-info-title">Rooms</h4>
                          <span>{{this.roomnum}}</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div><!-- End carousel item -->
            {{/each}}
          </div>
        </div>
        <div class="propery-carousel-pagination carousel-pagination"></div>

      </div>
    </section><!-- End Latest Properties Section -->

  </main><!-- End #main -->

